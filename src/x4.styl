//------------------------------------------------------------------------------

reset-html5()

// Tints
x4_ColorCreate(
    '.tint',
    x4_JoinSpace(
        $x4_Color,
        $x4_TintLighter,
        $x4_TintLight,
        $x4_TintMedium,
        $x4_TintDark,
        $x4_TintDarker
    )
)

// Shades
x4_ColorCreate(
    '.shade',
    x4_JoinSpace(
        $x4_Color,
        $x4_ShadeLighter,
        $x4_ShadeLight,
        $x4_ShadeMedium,
        $x4_ShadeDark,
        $x4_ShadeDarker
    )
)

