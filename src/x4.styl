//------------------------------------------------------------------------------
// @part Theme
//------------------------------------------------------------------------------

.theme
  color $x4_ShadeDark
  -webkit-filter grayscale(100%)
  x4_GradientStripes(
      $x4_GradientDegree45,
      $x4_TintDark,
      $x4_ShadeMedium,
      68px
  )
  .theme-switcher
    position fixed
    top 0.75rem
    right $x4_PaddingX


//------------------------------------------------------------------------------
// @part Theme HTML
//------------------------------------------------------------------------------

.theme-html
  -webkit-filter grayscale(0%)
  header .header-title:after
    content 'HTML'
  &.version-4 .header-title:after
    content 'HTML4'
  &.version-5 .header-title:after
    content 'HTML5'
  &.version-x .header-title:after
    content 'XHTML'


//------------------------------------------------------------------------------
// @part Theme CSS
//------------------------------------------------------------------------------

.theme-css
  -webkit-filter hue-rotate(190deg) grayscale(0%)
  header .header-title:after
    content 'CSS'
  &.version-2 .header-title:after
    content 'CSS2'
  &.version-3 .header-title:after
    content 'CSS3'
  &.version-4 .header-title:after
    content 'CSS4'


//------------------------------------------------------------------------------
// @part Theme JS
//------------------------------------------------------------------------------

.theme-js
  -webkit-filter hue-rotate(120deg) grayscale(0%)
  header
    .header-title:after
      content 'JavaScript'
  &.version-1_8_5 .header-title:after
    content 'JavaScript 1.8.5'


